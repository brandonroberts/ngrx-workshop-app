{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ngrx-workshop-app/api-interface": ["libs/api-interface/src/index.ts"],
      "@ngrx-workshop-app/cart-data-access": [
        "libs/cart-data-access/src/index.ts"
      ],
      "@ngrx-workshop-app/product-data-access": [
        "libs/product-data-access/src/index.ts"
      ],
      "@ngrx-workshop-app/shipping-data-access": [
        "libs/shipping-data-access/src/index.ts"
      ],
      "@ngrx-workshop-app/*": ["apps/ngrx-workshop-app/src/app/*"],
      "@ngrx-workshop-app/state/cart/actions": [
        "libs/state/cart/src/actions.ts"
      ],
      "@ngrx-workshop-app/state/cart": [
        "libs/state/cart/src/index.ts"
      ],
      "@ngrx-workshop-app/state/products/actions": [
        "libs/state/products/src/actions.ts"
      ],
      "@ngrx-workshop-app/state/app/actions": [
        "libs/state/app/src/actions.ts"
      ],
      "@ngrx-workshop-app/state/shipping/actions": [
        "libs/state/shipping/src/actions.ts"
      ],
      "@ngrx-workshop-app/state/products": [
        "libs/state/products/src/index.ts"
      ],
      "@ngrx-workshop-app/products/ui": ["libs/products/ui/src/index.ts"],
      "@ngrx-workshop-app/state/shipping": [
        "libs/state/shipping/src/index.ts"
      ],
      "@ngrx-workshop-app/cart/ui": ["libs/cart/ui/src/index.ts"],
      "@ngrx-workshop-app/top-bar/ui": ["libs/top-bar/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
